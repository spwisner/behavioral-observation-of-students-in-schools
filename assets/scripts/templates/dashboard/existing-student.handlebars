<div class="existing-student-selection-container">

<h3>Student Selection</h3>
<p>Please select the student whom you will be observing.</p>

<table class="table existing-student-selection-table table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>DOB</th>
      <th>School</th>
      <th>Teacher</th>
      <th>Grade</th>
      <th>Session Target</th>
    </tr>
  </thead>
  <tbody>
    {{#each students as |student|}}
      <tr>
        <td class="display-student-fn">
          {{student.first_name}}
        </td>
        <td class="display-student-ln">
          {{student.last_name}}
        </td>
        <td class="display-student-dob">
          {{student.born_on}}
        </td>
        <td class="display-student-school">
          {{student.school}}
        </td>
        <td class="display-student-teacher">
          {{student.teacher}}
        </td>
        <td class="display-student-grade">
          {{student.grade}}
        </td>
        <td class="display-obs-obs-comment">
          <input class="btn btn-info btn-sm dashboard-existing-create-btn" type="button" value="Select Student" data-current-student-id="{{student.id}}">
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<br><br>
<div class="dashboard-container">
  <button id="dashboard-home-btn" type="button" class="btn btn-primary">View Dashboard</button>
</div>
</div>
